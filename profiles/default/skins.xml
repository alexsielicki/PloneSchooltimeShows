<?xml version="1.0"?>

<object name="portal_skins"
        meta_type="Plone Skins Tool"
        allow_any="False"
        cookie_persistence="False"
        request_varname="plone_skin">

 <object name="ploneschooltimeshows_images"
         meta_type="Filesystem Directory View"
         directory="PloneSchooltimeShows/skins/ploneschooltimeshows_images"/>
 <object name="ploneschooltimeshows_styles"
         meta_type="Filesystem Directory View"
         directory="PloneSchooltimeShows/skins/ploneschooltimeshows_styles"/>
 <object name="ploneschooltimeshows_templates"
         meta_type="Filesystem Directory View"
         directory="PloneSchooltimeShows/skins/ploneschooltimeshows_templates"/>
 
 <skin-path name="*">
  <layer insert-after="custom" 
         name="ploneschooltimeshows_images"/>
  <layer insert-after="custom" 
         name="ploneschooltimeshows_styles"/>
  <layer insert-after="custom" 
         name="ploneschooltimeshows_templates"/>
 </skin-path>

</object>