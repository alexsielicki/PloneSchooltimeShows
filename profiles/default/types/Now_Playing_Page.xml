<?xml version="1.0"?>
<object name="Now_Playing_Page"
        meta_type="Factory-based Type Information with dynamic views"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        i18n:domain="plone">
   
 <property name="title" i18n:translate="">Now Playing Page</property>
 <property name="description" i18n:translate="">The "Now Playing" page.  Shows the next upcoming performance if you select "Active Season" from the Display menu.</property>
 <property name="content_icon">Now_Playing_Page.gif</property>
 <property name="content_meta_type">Now_Playing_Page</property>
 <property name="product">PloneSchooltimeShows</property>
 <property name="factory">addNow_Playing_Page</property>
 <property name="immediate_view">document_view</property>
 <property name="global_allow">False</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types">
 </property>
 <property name="allow_discussion">False</property>
 <property name="default_view">document_view</property>
 <property name="view_methods">
  <element value="document_view"/>
  <element value="nowplaying_view"/>
 </property>
 <property name="default_view_fallback">False</property>
 <alias from="(Default)" to="(dynamic view)"/>
 <alias from="index.html" to="(dynamic view)"/>
 <alias from="view" to="(selected layout)"/>
 <alias from="edit" to="base_edit"/>
 <action title="View" 
         action_id="view"
         category="object" 
         condition_expr=""
         url_expr="string:${object_url}/document_view" 
         visible="True">
  <permission value="View"/>
 </action>
 <action title="Edit" 
         action_id="edit"
         category="object" 
         condition_expr="not:object/@@plone_lock_info/is_locked_for_current_user"
         url_expr="string:${object_url}/edit" 
         visible="True">
  <permission value="Modify portal content"/>
 </action>
</object>
